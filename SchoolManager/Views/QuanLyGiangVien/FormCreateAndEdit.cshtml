@{
    ViewBag.Title = "FormCreateAndEdit";  
}
<h3>Thêm mới hoặc sửa thông tin giảng viên</h3>
<div class="add-or-edit">
    <div class="row">
        <div class="col-md-2">
            <label>Họ và tên</label>
            <input type="text" name="name" class="form-control" />
            <div class="error"></div>
        </div>
        <div class="col-md-2">
            <label>Giới tính</label>
            <br />
            <input type="radio" name="gender" id="male" value="male" checked/><p>Nam</p>
            <input type="radio" name="gender" id="female" value="female" /><p>Nữ</p>
            <div class="error"></div>
        </div>
        <div class="col-md-2">
            <label>Ngày sinh</label>
            <input type="date" name="birthday" class="form-control" />
            <div class="error"></div>
        </div>
        <div class="col-md-2">
            <label>Địa chỉ</label>
            <input type="text" name="address" class="form-control" />
            <div class="error"></div>
        </div>
        <div class="col-md-2">
            <label>Số điện thoại</label>
            <input type="text" name="phone" class="form-control" />
            <div class="error"></div>
        </div>
        <div class="col-md-2">
            <label>Email</label>
            <input type="text" name="email" class="form-control" />
            <div class="error"></div>
        </div>
        <div class="col-md-2">
            <label>Mã khoa</label>
            <select class="form-control" id="facultyid" >
                <option value="0">All</option>
                @foreach(var item in ViewBag.ListFaculty as IEnumerable<SchoolManager.Models.Faculty>)
                {
                    <option value="@item.ID">@item.Name</option>
                }
            </select>

            <div class="error"></div>
        </div>
        <div class="col-md-2">
            <label>Ghi chú</label>
            <input type="text" name="node" class="form-control" />
        </div>

    </div>
    <button class="btn-add">Thêm</button>
    <button class="btn-edit">Sửa</button>
</div>
