
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="user-app">

    <h2> Danh sách tài khoản </h2>

    <div class="get-data">

    </div>

    <br />
    <h2 class="title"> Tạo mới tài khoản  </h2>
    <hr />
    <div class="row m-0 add-or-edit">
        <input type="number" name="id" value="0" class="form-control hidden" readonly hidden />
        <div class="col-md-4">
            <label> Họ và tên </label>
            <input type="text" name="name" value="" class="form-control" />
            <div class="error">

            </div>
        </div>
        <div class="col-md-4">
            <label> Account </label>
            <input type="text" name="account" value="" class="form-control" />
            <div class="error">

            </div>
        </div>
        <div class="col-md-4">
            <label> Password </label>
            <input type="text" name="password" value="" class="form-control" />
            <div class="error">

            </div>
        </div>
    </div>

    <br />
    <button class="btn-createEdit btn btn-primary" data-url="/StudentManager/AddOrEdit"> Thêm mới</button>
</div>
@section scripts{
    <script>
        GetListStudent();
        $('.btn-createEdit').click(function () {
            AddOrEdit(); 
        });  
    </script>
}




