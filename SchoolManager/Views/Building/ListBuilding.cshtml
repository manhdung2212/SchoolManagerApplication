@model IEnumerable<SchoolManager.Models.Building>
<h2>Danh sách tòa nhà</h2>
<table class="table">
    <thead>
        <tr>
            <td>Tên tòa</td>
            <td>ghi chú</td>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Node</td>
               
                <td>
                    <button class="btn btn-edit" data-id="@item.ID" data-name="@item.Name" data-node="@item.Node"><i class="far fa-edit text-success"></i></button>
                    <button class=" btn btn-delete" data-id="@item.ID"><i class="fas fa-trash text-danger"></i></button>
                    <button type="button" class="btn btn-detail" data-id="@item.ID" data-toggle="modal" data-target="#myModal">
                        <i class="text-primary fas fa-info-circle"></i>
                    </button>

                    <!-- The Modal -->
                    <div class="modal fade" id="myModal">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Modal Heading</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body">
                                    
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>

</table>

<div class="pagination">
    @for (int i = 1; i <= ViewBag.pageCount; i++)
    {
        if (i == ViewBag.pageNumber)
        {
            <button style="margin-left:5px" data-page="@i" class="active btn-link">@i</button>
        }
        else
        {
            <button style="margin-left:5px" data-page="@i" class="btn-link">@i</button>
        }
    }
</div>
